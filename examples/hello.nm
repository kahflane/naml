use std::testing::*;

fn main() {
    println("Hello, World!");

    var x: int = 40;
    var y: int = 2;
    var result: int = x + y;

    print("Result: ");
    println(result);
    assert_eq(result, 42, "Result should be 42");

    if (result == 42) {
        println("The answer!");
    }

    var i: int = 0;
    while (i < 3) {
        print("i = ");
        println(i);
        i = i + 1;
    }
    assert_eq(i, 3, "Loop counter should reach 3");
}
