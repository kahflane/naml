fn main() {
    var x: option<int> = some(42);
    var y: option<int> = none;

    if (x.is_some()) {
        println("x has a value");
    }

    if (y.is_none()) {
        println("y is none");
    }

    var val: int = x.or_default(0);
    println(val);

    var default_val: int = y.or_default(100);
    println(default_val);
}
